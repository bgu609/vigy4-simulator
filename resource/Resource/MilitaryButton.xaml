    <Style x:Key="MilitaryButton_Close"
           TargetType="Button">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">

                        <Grid x:Name="Panel"
                              Width="36"
                              Height="36"
                              Background="Transparent">

                            <Image Source="pack://application:,,,/Pa5455CmsResource;component/Images/icon_popup_close.png"
                                   Width="14"
                                   Height="14"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>

                            <ContentPresenter RecognizesAccessKey="True"/>
                            
                        </Grid>

                        <ControlTemplate.Triggers>

                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="Panel"
                                        Property="Background"
                                        Value="{StaticResource Brush_ButtonHoverSolid}"/>
                            </Trigger>

                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter TargetName="Panel"
                                        Property="Background"
                                        Value="{StaticResource Brush_ButtonPressedSolid}"/>
                            </Trigger>

                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

