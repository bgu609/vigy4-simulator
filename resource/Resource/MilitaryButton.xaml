    <Style x:Key="MilitaryButton_NumberingLamp"
           TargetType="Button">
        <Style.Setters>
            <Setter Property="Padding"
                    Value="14, 5, 0, 5"/>
            <Setter Property="HorizontalContentAlignment"
                    Value="Center"/>
            <Setter Property="VerticalContentAlignment"
                    Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">

                        <Border x:Name="Panel"
                                CornerRadius="3"
                                BorderThickness="1"
                                BorderBrush="{StaticResource Brush_ButtonStrokeEnabled}"
                                Background="{StaticResource Brush_ButtonEnabled}">
                            <Border.Effect>
                                <DropShadowEffect Color="#FFFFFF"
                                                  Opacity="0.1"
                                                  BlurRadius="0"
                                                  ShadowDepth="1"
                                                  Direction="270"/>
                            </Border.Effect>
                            <Grid HorizontalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock x:Name="NumberingText"
                                           Grid.Column="1"
                                           Style="{StaticResource TextBlock_SubTitle}"
                                           Text="{TemplateBinding Tag}"
                                           HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                           VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>

                                <Grid Grid.Column="3">
                                    <Ellipse Width="10"
                                             Height="10"
                                             Fill="{TemplateBinding Background}"
                                             HorizontalAlignment="Left"
                                             VerticalAlignment="Center"/>
                                    <TextBlock x:Name="ContentText"
                                               Style="{StaticResource TextBlock_SubTitle}"
                                               Padding="{TemplateBinding Padding}"
                                               Text="{TemplateBinding Content}"
                                               HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                               VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                </Grid>
                                
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>

                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter TargetName="Panel"
                                        Property="BorderBrush"
                                        Value="{StaticResource Brush_ButtonStrokeDisabled}"/>
                                <Setter TargetName="Panel"
                                        Property="Background"
                                        Value="{StaticResource Brush_ButtonDisabled}"/>
                                <Setter TargetName="ContentText"
                                        Property="Foreground"
                                        Value="{StaticResource Brush_TextDark}"/>
                            </Trigger>

                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="Panel"
                                        Property="BorderBrush"
                                        Value="{StaticResource Brush_ButtonStrokeHover}"/>
                                <Setter TargetName="Panel"
                                        Property="Background"
                                        Value="{StaticResource Brush_ButtonHover}"/>
                            </Trigger>

                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter TargetName="Panel"
                                        Property="BorderBrush"
                                        Value="{StaticResource Brush_ButtonStrokePressed}"/>
                                <Setter TargetName="Panel"
                                        Property="Background"
                                        Value="{StaticResource Brush_ButtonPressed}"/>
                            </Trigger>

                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

