<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="MilitaryColor.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="MilitaryBorder_Popup"
           TargetType="Border">
        <Style.Setters>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="BorderBrush"
                    Value="{StaticResource Brush_PopupStroke}"/>
            <Setter Property="Background"
                    Value="{StaticResource Brush_PopupBackground}"/>
        </Style.Setters>
    </Style>

    <Style x:Key="MilitaryBorder_Menu"
           TargetType="Border">
        <Style.Setters>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="BorderBrush"
                    Value="{StaticResource Brush_PopupStroke}"/>
            <Setter Property="Background"
                    Value="{StaticResource Brush_ListItemEnabled}"/>
            <Setter Property="Visibility"
                    Value="Collapsed"/>
        </Style.Setters>
    </Style>

    <Style x:Key="MilitaryBorder_TextBlock"
           TargetType="Border">
        <Style.Setters>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="BorderBrush"
                    Value="{StaticResource Brush_TextBoxStrokeEnabled}"/>
            <Setter Property="Background"
                    Value="{StaticResource Brush_TextBoxEnabled}"/>
        </Style.Setters>
    </Style>

    <Style x:Key="MilitaryBorder_ActionBarTextBlock"
           TargetType="Border">
        <Style.Setters>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="BorderBrush"
                    Value="{StaticResource Brush_ActionBarTextBoxEnabled}"/>
            <Setter Property="Background"
                    Value="{StaticResource Brush_ActionBarTextBoxEnabled}"/>
        </Style.Setters>
    </Style>

    <Style x:Key="MilitaryBorder_DividerH2Top"
           TargetType="Border">
        <Style.Setters>
            <Setter Property="Margin"
                    Value="3, 5, 3, 0"/>
            <Setter Property="Height"
                    Value="1"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Background"
                    Value="{StaticResource Brush_DividerH2Top}"/>
        </Style.Setters>
    </Style>

    <Style x:Key="MilitaryBorder_DividerH2Bottom"
           TargetType="Border">
        <Style.Setters>
            <Setter Property="Margin"
                    Value="3, 0, 3, 5"/>
            <Setter Property="Height"
                    Value="1"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Background"
                    Value="{StaticResource Brush_DividerH2Bottom}"/>
        </Style.Setters>
    </Style>

    <Style x:Key="MilitaryBorder_Status"
           TargetType="Border">
        <Style.Setters>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="BorderBrush"
                    Value="{StaticResource Brush_TextBoxStrokeEnabled}"/>
            <Setter Property="Background"
                    Value="{StaticResource Brush_StatusUnknown}"/>
        </Style.Setters>
    </Style>
    
</ResourceDictionary>