<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="MilitaryTypography.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <ControlTemplate x:Key="MilitaryComboBoxToggleButton"
                     TargetType="ToggleButton">

        <Border x:Name="Panel"
                BorderThickness="1"
                BorderBrush="{StaticResource Brush_ComboBoxStrokeEnabled}"
                Background="{StaticResource Brush_ComboBoxEnabled}">
            <Path x:Name="Badge"
                  Data="M5,5 L5,0 L0,5 L5,5 z"
                  Margin="1"
                  Width="5"
                  Fill="{StaticResource Brush_ComboBoxBadgeEnabled}"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Bottom"/>
        </Border>

        <ControlTemplate.Triggers>

            <Trigger Property="IsChecked"
                     Value="True">
                <Setter TargetName="Panel"
                        Property="BorderBrush"
                        Value="{StaticResource Brush_ComboBoxStrokePressed}"/>
                <Setter TargetName="Panel"
                        Property="Background"
                        Value="{StaticResource Brush_ComboBoxPressed}"/>
                <Setter TargetName="Badge"
                        Property="Fill"
                        Value="{StaticResource Brush_ComboBoxBadgePressed}"/>
            </Trigger>

            <Trigger Property="IsEnabled"
                     Value="False">
                <Setter TargetName="Panel"
                        Property="BorderBrush"
                        Value="{StaticResource Brush_ComboBoxStrokeDisabled}"/>
                <Setter TargetName="Panel"
                        Property="Background"
                        Value="{StaticResource Brush_ComboBoxDisabled}"/>
                <Setter TargetName="Badge"
                        Property="Fill"
                        Value="{StaticResource Brush_ComboBoxBadgeDisabled}"/>
                <Setter Property="Foreground"
                        Value="{StaticResource Brush_TextDark}"/>
            </Trigger>

            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="IsChecked"
                               Value="False"/>
                    <Condition Property="IsMouseOver"
                               Value="True"/>
                </MultiTrigger.Conditions>
                <Setter TargetName="Panel"
                        Property="BorderBrush"
                        Value="{StaticResource Brush_ComboBoxStrokeHover}"/>
                <Setter TargetName="Panel"
                        Property="Background"
                        Value="{StaticResource Brush_ComboBoxHover}"/>
                <Setter TargetName="Badge"
                        Property="Fill"
                        Value="{StaticResource Brush_ComboBoxBadgeHover}"/>
            </MultiTrigger>

            <Trigger Property="IsPressed"
                     Value="True">
                <Setter TargetName="Panel"
                        Property="BorderBrush"
                        Value="{StaticResource Brush_ComboBoxStrokePressed}"/>
                <Setter TargetName="Panel"
                        Property="Background"
                        Value="{StaticResource Brush_ComboBoxPressed}"/>
                <Setter TargetName="Badge"
                        Property="Fill"
                        Value="{StaticResource Brush_ComboBoxBadgePressed}"/>
            </Trigger>
            
        </ControlTemplate.Triggers>
        
    </ControlTemplate>
    
    <Style x:Key="MilitaryComboBoxItem"
       TargetType="ComboBoxItem">
        <Style.Setters>
            <Setter Property="FontSize"
                Value="{StaticResource FontSize_List}"/>
            <Setter Property="FontWeight"
                Value="{StaticResource FontWeight_List}"/>
            <Setter Property="FontFamily"
                Value="Noto Sans KR"/>
            <Setter Property="Foreground"
                Value="{StaticResource Brush_TextDark}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">

                        <Border x:Name="Panel"
                            Padding="{TemplateBinding Padding}"
                            BorderThickness="2"
                            BorderBrush="{StaticResource Brush_ListItemStrokeEnabled}"
                            Background="{StaticResource Brush_ListItemEnabled}">
                            <ContentPresenter/>
                        </Border>

                        <ControlTemplate.Triggers>

                            <Trigger Property="IsSelected"
                                 Value="True">
                                <Setter TargetName="Panel"
                                    Property="BorderBrush"
                                    Value="{StaticResource Brush_ListItemStrokePressed}"/>
                                <Setter TargetName="Panel"
                                    Property="Background"
                                    Value="{StaticResource Brush_ListItemPressed}"/>
                                <Setter Property="Foreground"
                                    Value="{StaticResource Brush_TextDefault}"/>
                            </Trigger>

                            <Trigger Property="IsEnabled"
                                 Value="False">
                                <Setter TargetName="Panel"
                                    Property="BorderBrush"
                                    Value="{StaticResource Brush_ListItemStrokeDisabled}"/>
                                <Setter TargetName="Panel"
                                    Property="Background"
                                    Value="{StaticResource Brush_ListItemDisabled}"/>
                                <Setter Property="Foreground"
                                    Value="{StaticResource Brush_TextListItemDisabled}"/>
                            </Trigger>

                            <Trigger Property="IsMouseOver"
                                 Value="True">
                                <Setter TargetName="Panel"
                                    Property="BorderBrush"
                                    Value="{StaticResource Brush_ListItemStrokeHover}"/>
                                <Setter TargetName="Panel"
                                    Property="Background"
                                    Value="{StaticResource Brush_ListItemHover}"/>
                                <Setter Property="Foreground"
                                    Value="{StaticResource Brush_TextDefault}"/>
                            </Trigger>

                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>
    
    <Style x:Key="MilitaryComboBox"
           TargetType="ComboBox">
        <Style.Setters>
            <Setter Property="ItemContainerStyle"
                Value="{StaticResource MilitaryComboBoxItem}"/>
            <Setter Property="VerticalContentAlignment"
                    Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">

                        <Grid Background="{StaticResource Brush_ListItemEnabled}">

                            <ToggleButton Template="{StaticResource MilitaryComboBoxToggleButton}"
                                          IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"/>

                            <ContentPresenter Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="{TemplateBinding Padding}"
                                              TextElement.FontSize="{StaticResource FontSize_Component_M}"
                                              TextElement.FontWeight="{StaticResource FontWeight_Component_M}"
                                              TextElement.FontFamily="Noto Sans KR"
                                              TextElement.Foreground="{StaticResource Brush_TextDefault}"
                                              IsHitTestVisible="False"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>

                            <Popup Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}">
                                <Border x:Name="DropDownBorder"
                                        MinWidth="{TemplateBinding ActualWidth}"
                                        MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                        BorderThickness="1"
                                        BorderBrush="{StaticResource Brush_PopupStroke}">
                                    <ScrollViewer>
                                        <StackPanel IsItemsHost="True"
                                                    KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>

                        </Grid>

                        <ControlTemplate.Triggers>

                            <Trigger Property="HasItems"
                                     Value="False">
                                <Setter TargetName="DropDownBorder"
                                        Property="MinHeight"
                                        Value="6"/>
                            </Trigger>

                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter Property="Foreground"
                                        Value="{StaticResource Brush_TextDark}"/>
                            </Trigger>
                            
                            <Trigger Property="IsGrouping"
                                     Value="True">
                                <Setter Property="ScrollViewer.CanContentScroll"
                                        Value="False"/>
                            </Trigger>

                        </ControlTemplate.Triggers>
                        
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    

</ResourceDictionary>